---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<div
  class="bg-card/80 backdrop-blur-2xl p-8 rounded-2xl shadow-xl ring-white/10 ring-1 flex flex-col h-full justify-between"
>
  <div class="text-center w-full">
    {title}
  </div>
  <p class="text-center">
    {description}
  </p>
</div>
