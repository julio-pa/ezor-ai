---
import Head from "../components/Head.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Head title={title} />
  </head>
  <body>
    <NavBar />

    <div class="w-full mx-auto max-w-7xl lg:px-32 md:px-12 px-8 py-5 mt-20">
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    --color-card: #131313;
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Syne", serif;
    scroll-snap-type: y proximity;
    scroll-behavior: smooth;
    @apply bg-gray-950 text-white;
    a {
      @apply text-gray-400 transition-colors hover:text-white;
    }
    h1 {
      @apply text-4xl font-normal text-transparent bg-clip-text bg-gradient-to-r from-gray-300 to-gray-500 md:text-balance tracking-tight sm:text-6xl;
    }
    p {
      @apply text-gray-400;
    }
    section,
    footer {
      scroll-snap-align: end none;
    }
  }
</style>
